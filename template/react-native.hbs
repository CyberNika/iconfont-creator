import React from 'react';
import {
  View,
  Text,
  StyleSheet,
} from 'react-native';

const ICON_MAP = {
  {{#each icons}}
  '{{name}}': '{{hexCode}}',
  {{/each}}
};

const styles = StyleSheet.create({
  icon: {
    fontFamily: 'iconfont',
    fontSize: 22,
  },
});

const Icon = ({ type, style }) => {
  return (
    <View style=\{{ flex: 1 }}>
      <Text style={[styles.icon, style]}>
        {String.fromCharCode(parseInt(ICON_MAP[type], 16))}
      </Text>
    </View>
  );
};

export default Icon;
